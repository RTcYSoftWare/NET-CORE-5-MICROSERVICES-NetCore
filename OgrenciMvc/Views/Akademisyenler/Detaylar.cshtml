@model OgrenciMvc.Models.Ogrenci
@{
    ViewData["Title"] = "Detaylar";
    Layout = "~/Views/Shared/_LayoutYeni.cshtml";
}



<div class="page-spacer"></div>
<div class="page-spacer"></div>
<div class="page-spacer"></div>

<div class="uk-container">
    <div>
        <h4>Öğrenci</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Adı
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Adi)
            </dd>
            <dt class="col-sm-2">
                Soyadı
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SoyAdi)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StajBasvuruFormu)
            </dt>
            @if (Model.StajBasvuruFormu == null)
            {
                <dd class="col-sm-10">
                    YÜKLENMEDİ
                </dd>
            }
            else
            {
                <dd class="col-sm-10">
                    YÜKLENDİ
                </dd>
            }
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StajSaglikFormu)
            </dt>
            @if (Model.StajUcertFormu == null)
            {
                <dd class="col-sm-10">
                    YÜKLENMEDİ
                </dd>
            }
            else
            {
                <dd class="col-sm-10">
                    YÜKLENDİ
                </dd>
            }
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StajUcertFormu)
            </dt>
            @if (Model.StajSaglikFormu == null)
            {
                <dd class="col-sm-10">
                    YÜKLENMEDİ
                </dd>
            }
            else
            {
                <dd class="col-sm-10">
                    YÜKLENDİ
                </dd>
            }
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StajBasvuruDurumu)
            </dt>

            @if (Model.StajBasvuruDurumu == false)
            {
                <dd class="col-sm-10">
                    ONAYLANMADI
                </dd>
            }
            else
            {
                <dd class="col-sm-10">
                    ONAYLANDI
                </dd>
            }

        </dl>
    </div>
    <div>
        <a asp-action="Duzenle" asp-route-id="@Model.OgrenciId">Başvuru Kontrol Et</a> |
        <a asp-action="Index">Listeye Geri Dön</a>
    </div>
</div>


