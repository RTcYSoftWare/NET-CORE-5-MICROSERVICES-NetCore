
@{
    ViewData["Title"] = "SoruCevap";
    Layout = "~/Views/Shared/_LayoutYeni.cshtml";
}


@*<link rel="stylesheet" href="~/assets/css/profil.css" />
    <link rel="stylesheet"
          href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />*@



<div class="page-spacer"></div>

<div class="ml-5">
    <div class="uk-container">
        <div class="flex gap-12">
            <div class="w-1/5 space-y-4 uk-visible@m">
                <div class="grid grid-cols-1 gap-1 ustmenu">
                    <a href="/ogrenciler/Anasayfa/@ViewBag.Id" class="bg-gray-300 inline-block px-4 py-2 font-semibold rounded-md text-center text-gray-700 hover:text-gray-700 hover:bg-gray-400">Anasayafa</a>
                    <a href="/ogrenciler/StajBasvurusu" class="bg-gray-300 inline-block px-4 py-2 font-semibold rounded-md text-center text-gray-700 hover:text-gray-700 hover:bg-gray-400">Staj Başvurum</a>
                    <a href="/ogrenciler/StajDurumu/@ViewBag.Id" class="bg-gray-300 inline-block px-4 py-2 font-semibold rounded-md text-center text-gray-700 hover:text-gray-700 hover:bg-gray-400">Güncel Staj Durumu</a>
                    <a href="/ogrenciler/SoruCevap/@ViewBag.Id" class="bg-gray-300 inline-block px-4 py-2 font-semibold rounded-md text-center text-gray-700 hover:text-gray-700 hover:bg-gray-400">Sorular</a>
                </div>
            </div>
            <div class="w-4/5">
                <div class="max-w-3xl m-auto py-10 px-4">
                    <h3 class="mb-4"> Soru Ekleyin </h3>
                    <div class="flex gap-x-4 mb-5 relative">
                        <div class="flex-1">
                            <div class="grid grid-cols-2 gap-y-0 gap-x-4">
                                <div class="col-span-2">
                                    <textarea name="inp_ogrenci_soru_ekle" id="inp_ogrenci_soru_ekle" cols="30" rows="6"></textarea>
                                </div>
                                <div class="col-span-2 flex justify-between py-4">
                                    <p class="m-0 text-gray-600"> Ktun Öğrenci </p>
                                    <button typeof="button" class="btn_ogrenci_soru_ekle bg-blue-600 font-semibold p-2 mt-2 rounded-md text-center text-green-600 text-white">Soruyu Kaydet</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>



<script>
    $(document).ready(function () {
        $(".btn_ogrenci_soru_ekle").click(function () {

            let id = @ViewBag.Id;
            let soru = $("#inp_ogrenci_soru_ekle").val();

            $.ajax({
                url: "/ogrenciler/SoruEkle",
                type: "POST",
                data: { id: id, soru: soru },
                success: function (data) {
                    if (data == "1") {
                        alert("SORU KAYDEDİLDİ !!!");
                    }
                    else if (data == "2") {
                        alert("KAYITLI ÖĞRENCİ BULUNAMADI !!!");
                    }
                    else if (data == "3") {
                        alert("BOŞ SORU GİREMEZSİNİZ !!!");
                    }
                }
            })


        });



    });



</script>